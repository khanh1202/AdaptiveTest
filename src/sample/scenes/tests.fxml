<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.TestsController">
   <children>
      <VBox>
         <children>
            <ButtonBar maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" style="-fx-background-color: #336699;">
               <buttons>
                  <Button fx:id="math_btn" mnemonicParsing="false" onAction="#mathTestClick" text="Math" />
                  <Button fx:id="rec_btn" mnemonicParsing="false" onAction="#recTestClick" text="Recognize Critical Info" />
                  <Button fx:id="spell_btn" mnemonicParsing="false" onAction="#spellingClick" text="Spelling" />
                  <Button fx:id="lis_btn" mnemonicParsing="false" onAction="#listeningClick" text="Listening" />
                  <Button fx:id="write_btn" mnemonicParsing="false" onAction="#writingClick" text="Writing" />
                  <ToolBar prefHeight="40.0" prefWidth="200.0">
                     <items>
                        <Button fx:id="logout_btn" mnemonicParsing="false" onAction="#logoutClick" text="Logout" />
                     </items>
                  </ToolBar>
               </buttons>
            </ButtonBar>
            <Label fx:id="timer_lbl" alignment="TOP_LEFT" textFill="#336699">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</VBox>
