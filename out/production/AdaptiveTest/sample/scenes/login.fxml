                  <Insets bottom="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="login_btn" mnemonicParsing="false" text="Log in" onAction="#loginClick"/>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="signup_btn" mnemonicParsing="false" text="Don't have an account? Sign up here" onAction="#signupClick">
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
